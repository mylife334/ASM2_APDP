@model FinalQLVS.Models.TimeTable

@{
    ViewData["Title"] = "Delete";
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Students</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="~/css/adminstyle.css" asp-append-version="true" />

</head>
<body>
    <div class="container-scroller">
        <div class="sidebar">
            <h2 style="font-size: 40px;">BTEC</h2>
            <h2 style="font-size: 40px;">FPT BTEC</h2>>
            <ul class="nav">
                @await Component.InvokeAsync("Navbar")
            </ul>
        </div>
        <div class="content-wrapper">
            <div class="header">
                @await Component.InvokeAsync("NavbarLeftAdmin")
            </div>
            <div class="search-section">
                <h2 style="font-size: 20px; text-align: center;">Delete Time Table</h2>

                <div>
                    <h4>Student</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CourseName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CourseName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.LectureName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.LectureName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Room)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Room)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.StartTime)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.StartTime)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.EndTime)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.EndTime)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.DayOfWeek)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DayOfWeek)
                        </dd>
                    </dl>
                    <h3>Are you sure you want to delete this?</h3>

                    <form asp-action="Delete" style="margin-top: 20px;">
                        <input type="hidden" asp-for="TimeTableId" />
                        <input style="" type="submit" value="Delete" class="buttonssss" />
                    </form>
                </div>

            </div>

        </div>
    </div>
    <style>
        .Studentcreat {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-top: 10px;
        }

            .Studentcreat label {
                width: 10%;
                font-size: 15px;
            }

            .Studentcreat input {
                width: 90%;
                height: 30px;
                border-radius: 5px;
                border: 1px solid rgb(129, 113, 113);
                padding-left: 10px;
                margin-bottom: 10px;
            }

        .buttonssss {
            width: 9%;
            height: 35px;
            margin-bottom: 10px;
            margin-top: 10px;
            margin-left: 510px;
            background-color: #1c1b22;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 15px;
            cursor: pointer;
        }
    </style>
</body>
<script src="scripts.js"></script>
<script src="~/js/adminscripts.js" asp-append-version="true"></script>
</html>
<h1>Delete</h1>


