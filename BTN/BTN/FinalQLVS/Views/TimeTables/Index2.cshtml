@model IEnumerable<FinalQLVS.Models.TimeTable>

@{
    ViewData["Title"] = "Index";
}

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Students</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="~/css/adminstyle.css" asp-append-version="true" />
</head>
<body>
    <div class="container-scroller">
        <div class="sidebar">
            <h2 style="font-size: 40px;">FPT BTEC</h2>
            <ul class="nav">
                @await Component.InvokeAsync("Navbar2")
            </ul>
        </div>
        <div class="content-wrapper">
            <div class="header">
                @await Component.InvokeAsync("NavbarLeftAdmin")
            </div>
            <div class="search-section">
                <form asp-controller="TimeTables" asp-action="Search" method="get" class="search-box">
                    <input type="text" name="searchString" placeholder="Search for TimeTables">
                    <button type="submit"><i class="ri-menu-search-line"></i>Search</button>
                </form>
            </div>
            <div class="search-section">
                <h2>Time Table</h2>
                <table>
                    <tr>
                        <th>Slot</th>
                        <th>Mon</th>
                        <th>Tue</th>
                        <th>Wed</th>
                        <th>Thu</th>
                        <th>Fri</th>
                        <th>Sat</th>
                        <th>Sun</th>
                    </tr>
                    <tr>
                        <th>
                            Slot 1 (7:15-9:15)
                        </th>
                        @foreach (var item in Model.Where(x => x.TimeTableId == 1))
                        {
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseName)
                                <br />
                                @Html.DisplayFor(modelItem => item.LectureName)
                                <br />
                                (At @Html.DisplayFor(modelItem => item.Room))
                            </td>
                        }
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <th>Slot 2 (9:25-11:25)</th>
                        @foreach (var item in Model.Where(x => x.TimeTableId == 1))
                        {
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseName)
                                <br />
                                @Html.DisplayFor(modelItem => item.LectureName)
                                <br />
                                (At @Html.DisplayFor(modelItem => item.Room))
                            </td>
                        }
                        <td></td>
                        <td></td>
                        <td></td>
                        @foreach (var item in Model.Where(x => x.TimeTableId == 3))
                        {
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseName)
                                <br />
                                @Html.DisplayFor(modelItem => item.LectureName)
                                <br />
                                (At @Html.DisplayFor(modelItem => item.Room))
                            </td>
                        }
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <th>Slot 3 (12:00-14:00)</th>
                        <td></td>
                        <td></td>
                        @foreach (var item in Model.Where(x => x.TimeTableId == 3))
                        {
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseName)
                                <br />
                                @Html.DisplayFor(modelItem => item.LectureName)
                                <br />
                                (At @Html.DisplayFor(modelItem => item.Room))
                            </td>
                        }
                        @foreach (var item in Model.Where(x => x.TimeTableId == 2))
                        {
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseName)
                                <br />
                                @Html.DisplayFor(modelItem => item.LectureName)
                                <br />
                                (At @Html.DisplayFor(modelItem => item.Room))
                            </td>
                        }
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <th>Slot 4 (14:10-16:10)</th>
                        <td></td>
                        <td></td>
                        @foreach (var item in Model.Where(x => x.TimeTableId == 2))
                        {
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseName)
                                <br />
                                @Html.DisplayFor(modelItem => item.LectureName)
                                <br />
                                (At @Html.DisplayFor(modelItem => item.Room))
                            </td>
                        }
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <th>Slot 5 (16:20-18:20)</th>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <th>Slot 6 (18:30-20:30)</th>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <th>Slot 7 (20:30-22:30)</th>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </table>
                <style>
                    body {
                        font-family: 'Roboto', sans-serif;
                        background-color: #fce4ec; /* Soft pink background */
                        margin: 0;
                        padding: 0;
                    }

                    .container-scroller {
                        display: flex;
                    }

                    .sidebar {
                        width: 250px;
                        background-color: #f8bbd0; /* Light pink for sidebar */
                        padding: 20px;
                        box-shadow: 2px 0 5px rgba(0,0,0,0.1);
                    }

                        .sidebar h2 {
                            font-size: 40px;
                            color: #880e4f; /* Dark pink for text */
                        }

                    .profile {
                        margin-bottom: 20px;
                    }

                        .profile p {
                            margin: 5px 0;
                            font-size: 15px;
                            color: #880e4f; /* Dark pink for text */
                        }

                    .nav {
                        list-style: none;
                        padding: 0;
                    }

                        .nav li {
                            margin: 10px 0;
                        }

                            .nav li a {
                                text-decoration: none;
                                color: #880e4f; /* Dark pink for text */
                                font-size: 18px;
                            }

                    .content-wrapper {
                        flex: 1;
                        padding: 20px;
                        background-color: #ffffff; /* White background for content */
                    }

                    .header {
                        margin-bottom: 20px;
                    }

                    .search-section {
                        margin-bottom: 20px;
                    }

                        .search-section h3, .search-section h2 {
                            color: #880e4f; /* Dark pink for text */
                        }

                    .search-box {
                        display: flex;
                        align-items: center;
                        background-color: #f8bbd0; /* Light pink background */
                        border-radius: 20px;
                        padding: 10px;
                    }

                        .search-box input {
                            border: none;
                            padding: 10px;
                            border-radius: 20px;
                            margin-right: 10px;
                            flex: 1;
                        }

                        .search-box button {
                            border: none;
                            background-color: #ec407a; /* Pink for button */
                            color: #fff;
                            padding: 10px 20px;
                            border-radius: 20px;
                            cursor: pointer;
                        }

                            .search-box button i {
                                margin-right: 5px;
                            }

                    table {
                        width: 100%;
                        border-collapse: collapse;
                        border-radius: 10px; /* Rounded table corners */
                        overflow: hidden; /* Ensure rounded corners */
                        background-color: #fce4ec; /* Light pink background */
                    }

                    th, td {
                        padding: 15px;
                        text-align: center;
                        border: 1px solid #f8bbd0; /* Light pink for borders */
                    }

                    th {
                        background-color: #f8bbd0; /* Light pink for header */
                        color: #880e4f; /* Dark pink for text */
                    }

                    td {
                        background-color: #ffffff; /* White background for table rows */
                        color: #880e4f; /* Dark pink for text */
                    }

                    .actions a {
                        margin-right: 8px;
                        text-decoration: none;
                        color: #880e4f; /* Dark pink for text */
                        font-size: 18px;
                    }

                        .actions a i {
                            margin-right: 5px;
                        }

                    .lolp {
                        color: #880e4f; /* Dark pink for text */
                        text-decoration: none;
                        font-size: 20px;
                    }

                    .search-section table tr td {
                        color: #0a1fa8;
                        text-decoration: underline;
                    }
                </style>
            </div>
        </div>
    </div>
</body>
<script src="scripts.js"></script>
<script src="~/js/adminscripts.js" asp-append-version="true"></script>
</html>
