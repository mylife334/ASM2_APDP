@model IEnumerable<FinalQLVS.Models.SubjectCourse>

@{
    ViewData["Title"] = "Index2";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Students</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="~/css/adminstyle.css" asp-append-version="true" />
</head>
<body>
    <div class="container-scroller">
        <div class="sidebar">
            <h2 style="font-size: 40px;">FPT BTEC</h2>
            <ul class="nav">
                @await Component.InvokeAsync("Navbar3")
            </ul>
        </div>
        <div class="content-wrapper">
            <div class="header">
                @await Component.InvokeAsync("NavbarLeftStudent")
            </div>
            <div class="search-section">
                <form asp-controller="SubjectCourses" asp-action="Search" method="get" class="search-box">
                    <input type="text" name="searchString" placeholder="Search...">
                    <button type="submit"><i class="ri-menu-search-line"></i> Search</button>
                </form>
            </div>
            <div class="search-section">
                <h2>Subject Scores</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>@Html.DisplayNameFor(model => model.Category)</th>
                            <th>@Html.DisplayNameFor(model => model.CourseName)</th>
                            <th>Student Name</th>
                            <th>@Html.DisplayNameFor(model => model.lecturer)</th>
                            <th>@Html.DisplayNameFor(model => model.point)</th>
                            <th>@Html.DisplayNameFor(model => model.Status)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.SubjectCourseId)</td>
                                <td>@Html.DisplayFor(modelItem => item.Category)</td>
                                <td>@Html.DisplayFor(modelItem => item.CourseName)</td>
                                <td>@Html.DisplayFor(modelItem => item.NameStudent)</td>
                                <td>@Html.DisplayFor(modelItem => item.lecturer)</td>
                                <td>@Html.DisplayFor(modelItem => item.point)</td>
                                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <style>
                    body {
                        font-family: 'Roboto', sans-serif;
                        background-color: #fce4ec;
                        margin: 0;
                        padding: 0;
                    }

                    .container-scroller {
                        display: flex;
                    }

                    .sidebar {
                        width: 250px;
                        background-color: #f8bbd0;
                        padding: 20px;
                        box-shadow: 2px 0 5px rgba(0,0,0,0.1);
                    }

                        .sidebar h2 {
                            font-size: 40px;
                            color: #880e4f;
                        }

                    .profile p {
                        margin: 5px 0;
                        font-size: 15px;
                        color: #880e4f;
                    }

                    .nav {
                        list-style: none;
                        padding: 0;
                    }

                        .nav li {
                            margin: 10px 0;
                        }

                            .nav li a {
                                text-decoration: none;
                                color: #880e4f;
                                font-size: 18px;
                            }

                    .content-wrapper {
                        flex: 1;
                        padding: 20px;
                        background-color: #ffffff;
                    }

                    .header {
                        margin-bottom: 20px;
                    }

                    .search-section {
                        margin-bottom: 20px;
                    }

                        .search-section h2 {
                            color: #880e4f;
                        }

                    .search-box {
                        display: flex;
                        align-items: center;
                        background-color: #f8bbd0;
                        border-radius: 20px;
                        padding: 10px;
                    }

                        .search-box input {
                            border: none;
                            padding: 10px;
                            border-radius: 20px;
                            margin-right: 10px;
                            flex: 1;
                        }

                        .search-box button {
                            border: none;
                            background-color: #ec407a;
                            color: #fff;
                            padding: 10px 20px;
                            border-radius: 20px;
                            cursor: pointer;
                        }

                            .search-box button i {
                                margin-right: 5px;
                            }

                    table {
                        width: 100%;
                        border-collapse: collapse;
                        border-radius: 10px;
                        overflow: hidden;
                        background-color: #fce4ec;
                    }

                    th, td {
                        padding: 15px;
                        text-align: center;
                        border: 1px solid #f8bbd0;
                    }

                    th {
                        background-color: #f8bbd0;
                        color: #880e4f;
                    }

                    td {
                        background-color: #ffffff;
                        color: #880e4f;
                    }
                </style>
            </div>
        </div>
    </div>
</body>
<script src="scripts.js"></script>
<script src="~/js/adminscripts.js" asp-append-version="true"></script>
</html>
