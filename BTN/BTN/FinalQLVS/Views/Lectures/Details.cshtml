@model FinalQLVS.Models.Lecture

@{
    ViewData["Title"] = "Details";
}

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Students</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="~/css/adminstyle.css" asp-append-version="true" />
</head>
<body>
    <div class="container-scroller">
        <div class="sidebar">
            <h2 style="font-size: 40px;">BTEC</h2>
            <div class="profile">
                <div>
                    <p style="font-size: 15px;">Dashboard</p>
                    <p style="font-size: 15px;">Admin</p>
                </div>
            </div>
            <ul class="nav">
                @await Component.InvokeAsync("Navbar")
            </ul>
        </div>
        <div class="content-wrapper">
            <div class="header">
                <div class="welcome">Phùng Bá Quốc Anh Welcome!</div>
                <div class="user-info">
                    <img style="width: 45px;" src="https://e7.pngegg.com/pngimages/61/17/png-clipart-person-with-white-mask-using-laptop-white-hat-security-hacker-anonymous-anonymous-face-fictional-character-thumbnail.png" alt="User Picture">
                    <p>Phùng Bá Quốc Anh</p>
                    <div class="dropdown">
                        @await Component.InvokeAsync("NavbarLeftAdmin")

                    </div>
                </div>
            </div>
            <div class="search-section">
                <h3>Search Lecturer</h3>
                <div class="search-box">
                    <input type="text" placeholder="Search Lecturer by ID">
                    <button>Search</button>
                </div>
            </div>
            <div class="search-section">
                <h2>Manage Lecturer</h2>
                <p class="lol">
                    <a class="lolp" asp-action="Create"><i class="ri-add-box-fill"></i>Create New</a>
                </p>
                <table>
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Gender)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateOfBirth)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PhoneNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LectureCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Startdate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Specialized)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Password)
                            </th>
                        </tr>
                    </thead>
                    <tbody>                       
                            <tr>
                                <td>
                                @Html.DisplayFor(model => model.LectureId)
                                </td>
                                <td>
                                @Html.DisplayFor(model => model.Name)
                                </td>
                                <td>
                                @Html.DisplayFor(model => model.Address)
                                </td>
                                <td>
                                @Html.DisplayFor(model => model.Gender)
                                </td>
                                <td>
                                @Html.DisplayFor(model => model.DateOfBirth)
                                </td>
                                <td>
                                @Html.DisplayFor(model => model.PhoneNumber)
                                </td>
                                <td>
                                @Html.DisplayFor(model => model.LectureCode)
                                </td>
                                <td>
                                @Html.DisplayFor(model => model.Startdate)
                                </td>
                                <td>
                                @Html.DisplayFor(model => model.Specialized)
                                </td>
                                <td>
                                @Html.DisplayFor(model => model.Email)
                                </td>
                                <td>
                                @Html.DisplayFor(model => model.Password)
                                </td>                             
                            </tr>
                        }
                    </tbody>
                </table>
                <style>
                    table {
                        width: 100%;
                        border-collapse: collapse;
                    }

                    table, th, td {
                        border: 1px solid black;
                    }

                    th, td {
                        padding: 8px;
                        text-align: center;
                    }

                    th {
                        background-color: #ffffff;
                    }

                    .actions a {
                        margin-right: 8px;
                        text-decoration: none;
                        color: black; /* Ensure action links are black */
                    }

                    .ri-focus-2-fill {
                        color: green;
                    }

                    .ri-settings-2-fill {
                        color: blue;
                    }

                    .ri-delete-bin-2-fill {
                        color: red;
                    }

                    .lolp {
                        color: black;
                        text-decoration: none;
                        font-size: 20px;
                    }
                </style>
            </div>
        </div>
    </div>
</body>
<script src="scripts.js"></script>
<script src="~/js/adminscripts.js" asp-append-version="true"></script>
</html>
