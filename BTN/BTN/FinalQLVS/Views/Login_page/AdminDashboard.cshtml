@model IEnumerable<FinalQLVS.Models.Student>

@{
    ViewBag.Title = "Admin Dashboard";
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Students</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="~/css/adminstyle.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            color: #333;
            overflow: hidden;
        }

        .background-video {
            position: fixed;
            right: 0;
            bottom: 0;
            min-width: 100%;
            min-height: 100%;
            z-index: -1;
        }

        .container-scroller {
            display: flex;
            width: 100%;
            height: 100vh;
            background: rgba(255, 255, 255, 0.6); /* Reduced opacity for the main container */
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            border-radius: 20px;
            overflow: hidden;
            padding: 20px;
            flex-direction: row;
            align-items: flex-start;
            z-index: 1;
            position: relative;
        }

        .sidebar {
            width: 250px;
            background-color: rgba(248, 187, 208, 0.8); /* Reduced opacity for sidebar */
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
            border-radius: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .sidebar h2 {
                font-size: 40px;
                color: #880e4f; /* Dark pink for text */
                margin-bottom: 20px;
            }

        .profile {
            text-align: center;
            margin-bottom: 20px;
        }

            .profile p {
                margin: 5px 0;
                font-size: 15px;
                color: #880e4f; /* Dark pink for text */
            }

        .nav {
            list-style: none;
            padding: 0;
            width: 100%;
        }

            .nav li {
                margin: 10px 0;
            }

                .nav li a {
                    text-decoration: none;
                    color: #880e4f; /* Dark pink for text */
                    font-size: 18px;
                    display: block;
                    padding: 10px;
                    border-radius: 10px;
                    transition: background 0.3s;
                }

                    .nav li a:hover {
                        background-color: #fce4ec; /* Light pink on hover */
                    }

        .content-wrapper {
            flex: 1;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.8); /* Reduced opacity for content */
            border-radius: 20px;
            margin-left: 20px;
            display: flex;
            flex-direction: column;
            width: calc(100% - 270px);
        }

        .header {
            margin-bottom: 20px;
        }

        .search-section {
            margin-bottom: 20px;
        }

            .search-section h3, .search-section h2 {
                color: #880e4f; /* Dark pink for text */
            }

        .search-box {
            display: flex;
            align-items: center;
            background-color: rgba(248, 187, 208, 0.8); /* Reduced opacity for search box */
            border-radius: 20px;
            padding: 10px;
        }

            .search-box input {
                border: none;
                padding: 10px;
                border-radius: 20px;
                margin-right: 10px;
                flex: 1;
            }

            .search-box button {
                border: none;
                background-color: #ec407a; /* Pink for button */
                color: #fff;
                padding: 10px 20px;
                border-radius: 20px;
                cursor: pointer;
            }

                .search-box button i {
                    margin-right: 5px;
                }

        table {
            width: 100%;
            border-collapse: collapse;
            border-radius: 10px; /* Rounded table corners */
            overflow: hidden; /* Ensure rounded corners */
            background-color: rgba(252, 228, 236, 0.8); /* Reduced opacity for table */
        }

        th, td {
            padding: 15px;
            text-align: center;
            border: 1px solid #f8bbd0; /* Light pink for borders */
        }

        th {
            background-color: rgba(248, 187, 208, 0.8); /* Reduced opacity for header */
            color: #880e4f; /* Dark pink for text */
        }

        td {
            background-color: rgba(255, 255, 255, 0.8); /* Reduced opacity for rows */
            color: #880e4f; /* Dark pink for text */
        }

        .actions a {
            margin-right: 8px;
            text-decoration: none;
            color: #880e4f; /* Dark pink for text */
            font-size: 18px;
        }

            .actions a i {
                margin-right: 5px;
            }

        .lolp {
            color: #880e4f; /* Dark pink for text */
            text-decoration: none;
            font-size: 20px;
        }

        .cute-icon {
            width: 100px;
            height: 100px;
            margin-bottom: 20px;
        }

        .decoration {
            position: absolute;
            width: 50px;
            height: 50px;
            background: #ff66b2;
            border-radius: 50%;
        }

        .decoration1 {
            top: -25px;
            left: -25px;
        }

        .decoration2 {
            bottom: -25px;
            right: -25px;
        }
    </style>
</head>
<body>
    <video autoplay muted loop class="background-video">
        <source src="https://media.istockphoto.com/id/900714718/vi/video/funny-cat-ch%C6%A1i-b%C3%A0n-ph%C3%ADm-organ-ho%E1%BA%B7c-piano.mp4?s=mp4-640x640-is&k=20&c=Osj7Ih3in5m3icsgEc5xCYLbgTxEwWnxd8Bxt4rlJWE=" type="video/mp4">
        Your browser does not support HTML5 video.
    </video>
    <div class="container-scroller">
        <div class="sidebar">
            <h2>FPT BTEC</h2>
            <div class="profile">
            </div>
            <ul class="nav">
                @await Component.InvokeAsync("Navbar")
            </ul>   
        </div>
        <div class="content-wrapper">
            <div class="header">
                @await Component.InvokeAsync("NavbarLeftAdmin")
            </div>
        </div>
    </div>
</body>

<script src="scripts.js"></script>
<script src="~/js/adminscripts.js" asp-append-version="true"></script>
</html>
