@model FinalQLVS.Models.Student

@{
    ViewData["Title"] = "Edit";
}
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Students</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="~/css/adminstyle.css" asp-append-version="true" />

</head>
<body>
    <div class="container-scroller">
        <div class="sidebar">
            <h2 style="font-size: 40px;">FPT BTEC</h2>
            <ul class="nav">
                @await Component.InvokeAsync("Navbar")
            </ul>
        </div>
        <div class="content-wrapper">
            <div class="header">
                @await Component.InvokeAsync("NavbarLeftAdmin")
            </div>
            <div class="search-section">
                <h2 style="font-size: 20px; text-align: center;">Edit Student</h2>

                <div class="row">
                    <div class="">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="StudentId" />

                            <div class="Studentcreat">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="Studentcreat">
                                <label asp-for="Address" class="control-label"></label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="Studentcreat">
                                <label asp-for="Gender" class="control-label"></label>
                                <input asp-for="Gender" class="form-control" />
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>

                            <div class="Studentcreat">
                                <label asp-for="DateOfBirth" class="control-label"></label>
                                <input asp-for="DateOfBirth" class="form-control" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>

                            <div class="Studentcreat">
                                <label asp-for="PhoneNumber" class="control-label"></label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="Studentcreat">
                                <label asp-for="StudentCode" class="control-label"></label>
                                <input asp-for="StudentCode" class="form-control" />
                                <span asp-validation-for="StudentCode" class="text-danger"></span>
                            </div>
                            <div class="Studentcreat">
                                <label asp-for="Startdate" class="control-label"></label>
                                <input asp-for="Startdate" class="form-control" />
                                <span asp-validation-for="Startdate" class="text-danger"></span>
                            </div>
                            <div class="Studentcreat">
                                <label asp-for="StudentCls" class="control-label"></label>
                                <select asp-for="StudentCls" class="form-control" asp-items="ViewBag.ClassName"></select>
                            </div>
                            <div class="Studentcreat">
                                <label asp-for="Specialized" class="control-label"></label>
                                <input asp-for="Specialized" class="form-control" />
                                <span asp-validation-for="Specialized" class="text-danger"></span>
                            </div>
                            <div class="Studentcreat">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="Studentcreat">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <button type="submit" class="buttonssss btn btn-primary">Edit Student</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #fce4ec; /* Soft pink background */
            margin: 0;
            padding: 0;
        }

        .container-scroller {
            display: flex;
        }

        .sidebar {
            width: 250px;
            background-color: #f8bbd0; /* Light pink for sidebar */
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }

            .sidebar h2 {
                font-size: 40px;
                color: #880e4f; /* Dark pink for text */
                margin-bottom: 20px;
                text-align: center;
            }

        .nav {
            list-style: none;
            padding: 0;
        }

            .nav li {
                margin: 10px 0;
            }

                .nav li a {
                    text-decoration: none;
                    color: #880e4f; /* Dark pink for text */
                    font-size: 18px;
                }

        .content-wrapper {
            flex: 1;
            padding: 20px;
            background-color: #ffffff; /* White background for content */
        }

        .header {
            margin-bottom: 20px;
        }

        .form-section {
            margin: 20px auto;
            max-width: 600px;
            background-color: #fce4ec; /* Soft pink background */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

            .form-section h2 {
                color: #880e4f; /* Dark pink for text */
                margin-bottom: 20px;
                text-align: center;
            }

        .form-group {
            margin: 20px 0;
        }

            .form-group label {
                font-size: 15px;
                color: #880e4f; /* Dark pink for text */
                display: block;
                margin-bottom: 5px;
            }

            .form-group input {
                width: 100%;
                height: 35px;
                border-radius: 5px;
                border: 1px solid #ccc;
                padding-left: 10px;
            }

        .text-danger {
            color: #d9534f;
            margin-top: 5px;
            display: block;
        }

        .btn {
            padding: 10px 20px;
            font-size: 15px;
            border-radius: 5px;
            text-align: center;
            cursor: pointer;
            display: inline-block;
        }

        .btn-primary {
            background-color: #1c1b22;
            color: white;
            border: none;
        }

            .btn-primary:hover {
                background-color: #333;
            }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
            border: none;
            margin-left: 10px;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }
    </style>
</body>
<script src="scripts.js"></script>
<script src="~/js/adminscripts.js" asp-append-version="true"></script>
</html>

