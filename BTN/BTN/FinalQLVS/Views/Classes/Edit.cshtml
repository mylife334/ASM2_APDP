@model FinalQLVS.Models.Class

@{
    ViewData["Title"] = "Edit";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Class</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="~/css/adminstyle.css" asp-append-version="true" />
</head>
<body>
    <div class="container-scroller">
        <div class="sidebar">
            <h2>FPT BTEC</h2>
            <ul class="nav">
                @await Component.InvokeAsync("Navbar")
            </ul>
        </div>
        <div class="content-wrapper">
            <div class="header">
                @await Component.InvokeAsync("NavbarLeftAdmin")
            </div>
            <div class="form-section">
                <h2>Edit Class</h2>

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ClassId" />

                    <div class="form-group">
                        <label asp-for="ClassName" class="control-label"></label>
                        <input asp-for="ClassName" class="form-control" />
                        <span asp-validation-for="ClassName" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Edit Class</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #fce4ec; /* Soft pink background */
            margin: 0;
            padding: 0;
        }

        .container-scroller {
            display: flex;
        }

        .sidebar {
            width: 250px;
            background-color: #f8bbd0; /* Light pink for sidebar */
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }

            .sidebar h2 {
                font-size: 40px;
                color: #880e4f; /* Dark pink for text */
                margin-bottom: 20px;
                text-align: center;
            }

        .nav {
            list-style: none;
            padding: 0;
        }

            .nav li {
                margin: 10px 0;
            }

                .nav li a {
                    text-decoration: none;
                    color: #880e4f; /* Dark pink for text */
                    font-size: 18px;
                }

        .content-wrapper {
            flex: 1;
            padding: 20px;
            background-color: #ffffff; /* White background for content */
        }

        .header {
            margin-bottom: 20px;
        }

        .form-section {
            margin: 20px auto;
            max-width: 600px;
            background-color: #fce4ec; /* Soft pink background */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

            .form-section h2 {
                color: #880e4f; /* Dark pink for text */
                margin-bottom: 20px;
                text-align: center;
            }

        .form-group {
            margin: 20px 0;
        }

            .form-group label {
                font-size: 15px;
                color: #880e4f; /* Dark pink for text */
                display: block;
                margin-bottom: 5px;
            }

            .form-group input {
                width: 100%;
                height: 35px;
                border-radius: 5px;
                border: 1px solid #ccc;
                padding-left: 10px;
            }

        .text-danger {
            color: #d9534f;
            margin-top: 5px;
            display: block;
        }

        .btn {
            padding: 10px 20px;
            font-size: 15px;
            border-radius: 5px;
            text-align: center;
            cursor: pointer;
            display: inline-block;
        }

        .btn-primary {
            background-color: #1c1b22;
            color: white;
            border: none;
        }

            .btn-primary:hover {
                background-color: #333;
            }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
            border: none;
            margin-left: 10px;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }
    </style>
</body>
<script src="scripts.js"></script>
<script src="~/js/adminscripts.js" asp-append-version="true"></script>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
